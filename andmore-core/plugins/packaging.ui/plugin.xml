   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            category="org.eclipse.andmore.wizards.category"
            class="org.eclipse.andmore.android.packaging.ui.export.PackageExportWizard"
            icon="icons/export_android_package.png"
            id="org.eclipse.andmore.android.packaging.ui.wizard1"
            name="%exportWizardName">
         <description>
            %exportWizardDescription
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.andmore.android.certmanager.command.SignExternalPackagesHandler"
            id="org.eclipse.andmore.android.packaging.ui.sign"
            name="%signCommandLabel">
      </command>
      <command
            defaultHandler="org.eclipse.andmore.android.certmanager.command.UnsignExternalPackagesHandler"
            id="org.eclipse.andmore.android.packaging.ui.unsign"
            name="%unsignCommandLabel">
      </command>
      <command
            defaultHandler="org.eclipse.andmore.android.packaging.ui.handlers.ExportWizardHandler"
            id="org.eclipse.andmore.android.packaging.ui.export"
            name="%exportWizardShortName">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:studioAndroidPopupMenu">
         <command
               commandId="org.eclipse.andmore.android.packaging.ui.sign"
               icon="icons/sign_package.png"
               label="%signCommandLabel"
               style="push">
         </command>
         <command
               commandId="org.eclipse.andmore.android.packaging.ui.unsign"
               icon="icons/unsign_package.png"
               label="%unsignCommandLabel"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:motorolaMenu?after=signingSeparator">
         <menu
               id="studioSigningMenu"
               label="%signingLabel">
            <command
                  commandId="org.eclipse.andmore.android.packaging.ui.sign"
                  icon="icons/sign_package.png"
                  label="%signCommandLabel"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.andmore.android.packaging.ui.unsign"
                  icon="icons/unsign_package.png"
                  label="%unsignCommandLabel"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:motorolaMenu?after=externalToolsSeparator">
         <command
               commandId="org.eclipse.andmore.android.packaging.ui.export"
               icon="icons/export_android_package.png"
               label="%exportWizardShortName"
               style="push"
               tooltip="%exportWizardDescription">
         </command>
      </menuContribution>
   </extension>

</plugin>
